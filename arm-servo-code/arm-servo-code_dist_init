#include <Servo.h>
#include <NewPing.h>

Servo servo1;
Servo servo2;

const int SERVO1_PIN = 7;
const int SERVO2_PIN = 8;

// Ultrasonic Sensor Pin (Used for BOTH Trigger and Echo)
const int US_PIN = 11; 
const int MAX_DISTANCE = 200; // Maximum distance in cm

// Setup NewPing with the same pin for trigger and echo
NewPing sonar(US_PIN, US_PIN, MAX_DISTANCE);

// Set your starting angles
int start1 = 40;
int start2 = 60;

void setup() {
  servo1.attach(SERVO1_PIN);
  servo2.attach(SERVO2_PIN);

  // Move both to their original positions initially
  servo1.write(start1);
  servo2.write(start2);
  delay(1000);
}

void loop() {
  delay(50); // Wait 50ms between pings
  
  int distance = sonar.ping_cm();

  // If distance is NOT zero (0 means out of range) AND closer than 20cm
  if (distance > 0 && distance < 20) {
    runServoSequence();
  }
}

// Same sequence function as before
void runServoSequence() {
  // 1) Servo 1: +50°
  servo1.write(start1 + 50);
  delay(2000);

  // 2) Servo 2: +30°
  servo2.write(start2 + 30);
  delay(2000);

  // 3) Servo 1: Return to start
  servo1.write(start1);
  delay(3000);

  // 4) Servo 2: -50°
  servo2.write(start2 - 50);
  delay(2000);

  // 5) Return both to original position
  servo1.write(start1);
  servo2.write(start2);
  delay(2000);
}
